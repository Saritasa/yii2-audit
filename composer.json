{
    "name": "bedezign/yii2-audit",
    "description": "Audit module for Yii2",
    "keywords": ["yii2", "audit", "trail", "module"],
    "type": "yii2-extension",
    "license": "BSD 3-Clause",
    "authors": [
        {
            "name": "Steve Guns",
            "homepage": "http://bedezign.com/",
            "email": "Steve@bedezign.com"
        },
        {
            "name": "Brett O'Donnell",
