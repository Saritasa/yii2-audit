    "require": {
        "php": ">=5.4.0",
        "ext-bcmath": "*",
        "yiisoft/yii2": "2.*",
        "yiisoft/yii2-debug": "2.*",
        "2amigos/yii2-chartjs-widget": "2.*",
        "phpspec/php-diff": "1.*"
